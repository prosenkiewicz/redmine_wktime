<%= stylesheet_link_tag 'wk-time', :plugin => "redmine_wktime" %>
<%= form_tag({}, :data => {:cm_url => wkcrmcontact_context_menu_path}) do -%>
<div class="autoscroll">
	<table class="list time-entries">
		<thead>
			<tr>
				<th class="checkbox hide-when-print">
					<%= check_box_tag 'check_all', '', false, :class => 'toggle-selection',
					:title => "#{l(:button_check_all)}/#{l(:button_uncheck_all)}" %>
				</th>
				<th class="lbl-txt-align"><%= controller.getAccountLbl + " " +  l(:field_name) %></th>
				<th class="lbl-txt-align"><%= l(:label_account_address) %></th>
				<th class="lbl-txt-align"><%= l(:label_work_phone) %></th>
			<!--	<th class="lbl-txt-align"><%= l(:label_email) %></th> -->
				<th class="lbl-txt-align"><%= l(:label_country) %></th>
				<th class="lbl-txt-align"><%= l(:label_city) %></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @account_entries.each do |entry| %>
				<tr class="hascontextmenu">
					  <td class="checkbox hide-when-print"><%= check_box_tag("data[]", [name: entry.name, numbers: {work_phone: entry.address.respond_to?("work_phone") ? entry.address.work_phone : nil, home_phone: entry.address.respond_to?("home_phone") ? entry.address.home_phone : nil, mobile: entry.address.respond_to?("mobile") ? entry.address.mobile : nil}], false, :id => nil) %></td>
					  <td class="lbl-txt-align"><%=h entry.name %></td>
					  <td class="lbl-txt-align"><%=h entry.address.blank? ? "" : entry.address.address1 %></td>
					  <td class="lbl-txt-align"><%=h entry.address.blank? ? "" : entry.address.work_phone %></td>
					<!--  <td class="lbl-txt-align"><%=h entry.address.blank? ? "" : entry.address.email %></td> -->
					  <td class="lbl-txt-align"><%=h entry.address.blank? ? "" : entry.address.country %></td>
					  <td class="lbl-txt-align"><%=h entry.address.blank? ? "" : entry.address.city %></td>
					  <td align="center">
						  <%= link_to image_tag('edit.png'), {:controller => controller.controller_name, :action => 'edit', :account_id => entry.id,:address_id => entry.address.blank? ? "" : entry.address.id}, :title => l(:button_edit) %> 
						  <% if controller.deletePermission %>
							<%= link_to image_tag('delete.png'), {:controller => controller.controller_name, :action => 'destroy', :id => entry.id, :tab => controller.controller_name},  :data => {:confirm => l(:text_are_you_sure)}, :method => :delete, :title => l(:button_delete) %>
						   <% end %>
					  </td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= javascript_include_tag 'context_crmcontacts', :plugin => "redmine_wktime" %>
	<%= stylesheet_link_tag 'context_crmcontacts', :plugin => "redmine_wktime" %>
</div>
<span class="pagination"><%= pagination_links_full @entry_pages, @entry_count %></span>
<% end %>